# Local development environment configuration
# This file is for local development without Docker
# Copy this file to .env.local and fill in your API keys

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Alternative LLM Providers (Optional)
# OpenRouter - Multi-provider aggregator
# OPENROUTER_API_KEY=your_openrouter_api_key

# Fireworks AI - Fast inference provider
# FIREWORKS_API_KEY=your_fireworks_api_key

# LangFuse Configuration (for observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=http://localhost:3000

# Project Configuration
MAIN_DIR=./data
PROMPTS_CONFIG_PATH=./configs/prompts.yaml
GRAPH_CONFIG_PATH=./configs/graph.yaml

# LearnFlow FastAPI Service (local)
LEARNFLOW_HOST=localhost
LEARNFLOW_PORT=8000

# Logging
LOG_LEVEL=DEBUG

# Security Settings
SECURITY_ENABLED=true
SECURITY_FUZZY_THRESHOLD=0.85
SECURITY_MIN_CONTENT_LENGTH=10

# Database Settings (local PostgreSQL or Docker PostgreSQL on exposed port)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/learnflow?sslmode=disable

# Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Web UI Configuration (for local development)
WEB_UI_BASE_URL=http://localhost:5173
VITE_ARTIFACTS_API_URL=http://localhost:8001
VITE_LEARNFLOW_API_URL=http://localhost:8000
VITE_POLLING_INTERVAL=5000
VITE_MAX_RETRIES=3

# Prompt Configuration Service (local)
PROMPT_CONFIG_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/prompts_db
PROMPT_CONFIG_SERVICE_HOST=0.0.0.0
PROMPT_CONFIG_SERVICE_PORT=8002
PROMPT_CONFIG_LOG_LEVEL=INFO
PROMPT_CONFIG_INITIAL_DATA_PATH=./prompt-config-service/seed/initial_data.json
PROMPT_CONFIG_CACHE_TTL=300

# Service URLs for Bot (local networking)
PROMPT_SERVICE_URL=http://localhost:8002
ARTIFACTS_SERVICE_URL=http://localhost:8001

# Authentication Settings
BOT_API_KEY=your_secure_bot_api_key_here
ARTIFACTS_JWT_SECRET_KEY=your_secure_jwt_secret_key_here
ARTIFACTS_BOT_API_KEY=your_secure_bot_api_key_here

# Optional: GitHub Integration
# GITHUB_TOKEN=your_github_token
# GITHUB_REPOSITORY=username/repository

# Optional: Local Artifacts Storage
ARTIFACTS_BASE_PATH=data/artifacts
ARTIFACTS_ENSURE_PERMISSIONS=true
ARTIFACTS_MAX_FILE_SIZE=10485760